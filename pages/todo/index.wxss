.todo-container{
	width: 100%;
	height: 100%;
	display: flex;
  	flex-direction: column;
  	background-color: #eee;
}
.todo-container .section-date{
	padding: 40rpx 40rpx 0 40rpx;
	height: 100rpx;
	display: flex;
}
.todo-container .section-date .section-date-title{
	padding-right: 20rpx;
}
.todo-container .todo-contain {
	background-color: #fff;
	height: 100%;
  	display: flex;
  	flex-direction: column;
  	flex: 1;
  	overflow: auto;
  	overflow-y: auto;
}
.todo-container .section{
	width: 100%;
	height: 100rpx;
	padding: 20rpx 40rpx 20rpx 40rpx;
	display: flex;
}

.todo-container .section input{
	height: 100rpx;
	line-height: 100rpx;
}

.todo-single{
	display: flex;
	height: 50px;
	align-content: center;
	border-bottom: 1px solid #eee;
	padding: 0 40rpx 5rpx 40rpx;
}
.todo-single .todo{
	flex: 4;
	background-color: #fff;
	display: flex;
	align-content: center;
}
.todo-single .del{
	flex: 1;
	background-color: #f00;
	color: #fff;
	display: flex;
	align-content: center;
}

